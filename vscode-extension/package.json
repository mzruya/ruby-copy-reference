{
  "name": "copy-ruby-reference",
  "displayName": "Copy Ruby Reference",
  "description": "A simple VSCode extension that parses the Ruby AST and allows you to right click on a constant definition and copy a reference to it.",
  "version": "0.0.1",
  "publisher": "mzruya",
  "author": {
    "name": "Matan Zruya"
  },
  "icon": "icon.png",
  "keywords": [
    "ruby",
    "reference",
    "copy",
    "path"
  ],
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "engines": {
    "vscode": "^1.68.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mzruya/vscode-copy-ruby-reference.git"
  },
  "license": "MIT",
  "activationEvents": [
    "onCommand:copy-ruby-reference.copy-reference"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-ruby-reference.copy-reference",
        "title": "Ruby: copy reference"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "copy-ruby-reference.copy-reference",
          "group": "copy-ruby-reference"
        }
      ]
    },
    "keybindings": [
      {
        "command": "copy-ruby-reference.copy-reference",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "cargo-cp-artifact": "^0.1",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "ast-parser": "file:../ast-parser"
  }
}
